page{
	background-color: #f7f7f7;

}
.homepage{
	width: 85%;
	height: 100%;
	margin: 10% auto;

}
.centertop{
	width: 100%;
	height:120px;
}
.centerphpto{
	overflow:hidden;
	width: 80px;
	height:80px;
	float: left;
	background-color: red;
	border-radius: 5px;
}
.centerphpto image{width:100%;height:100%;display:block}
.centerright{
	width: calc(100% - 80px);
	height:80px;
	float: left;
	background-color: yellow;
}
.centerName{
	width: 100%;
	height:36px;
	padding-top:4px;
}
.resigerWrap{
	width: 100%;
	height:40px;

}
.login,.resiger{
	width:35%;
	float: left;
	height:30px;
	margin-left: 10%;
	background-color:blue;
	border-radius: 3px;
	text-align: center;
	line-height: 30px;
}
.centerConter{
	width: 100%;
	height:150px;
	border-radius: 5px;
	overflow: hidden;
}
.myorder,.myhistory,.mycloect {
	height:50px;
	border-bottom: 1px solid #f7f7f7;
	line-height: 50px;
	text-align: left;
	background-color: white;
}

.jiantou{
	width:20px;
	height:20px;
	margin-top:15px;
	margin-right: 10px;
	float: right;
	border:0;
	background: url(../../../image/jiantou.png);
	background-size: 100% 100%;
}

