/**index.wxss**/
.container{
	width:100%;
	height:100%;
	overflow: hidden;
}

.scrollwrap{
	width: 100%;
	height:100%;
	flex:1;
}
.good{width: 100%;height:100%;}
.good li{
	width: 100%;
	border-bottom: 1px;
	display: flex;
	flex-direction: row;
	height:130px;
	background-color: #f3f3f3;
	margin-bottom:2px;

}
.left{
	width: 85px;
	padding:5px;
	overflow: hidden;
	background: red;
}
.left image{
	width:100%;
	height:100%;
	display: block;
}
.right{
	height:100%;
	padding:5px 5px 5px 0px;
	display: flex;
	flex-direction: column;
	flex: 1;
	
}
.destion{
 	
	width: 100%;
	height:100px;
	overflow: hidden;
}
.rigthtop{
	height: 100%;
	width: 100%;
	display: flex;
}
.priceabout{
	padding-left: 5px;
	flex:1;
	display: flex;
	flex-direction: column;

}
.help{
	flex:1;
	display: flex;
}
.help span{
	text-align: center;
	margin-left: 10px
}
span.discunt{
	text-decoration: line-through;
	color: #888;
}
.pricecount{
	flex:1;
	margin-left: 10px
}
.addcar{

	width:50px;
	height:20px;
	border-radius: 3px;
	overflow: hidden
	margin-top:50px;
}
.addcar image{
	width: 100%;
	height:100%;
}
